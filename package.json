{
  "name": "support-platform",
  "private": true,
  "scripts": {
    "postinstall": "npx prisma@5.22.0 generate --schema=packages/database/prisma/schema.prisma",
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "clean": "turbo clean",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "pnpm --filter @support-platform/database db:migrate",
    "db:migrate:deploy": "pnpm --filter @support-platform/database db:migrate:deploy",
    "db:studio": "pnpm --filter @support-platform/database db:studio",
    "worker": "pnpm --filter @support-platform/jobs worker"
  },
  "devDependencies": {
    "rimraf": "^6.1.2",
    "turbo": "^2.3.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20"
  }
}