# Oh-liro Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection string
# For local: postgresql://user:password@localhost:5432/ohliro
# For Neon: postgresql://user:password@ep-xxx.region.neon.tech/ohliro?sslmode=require
DATABASE_URL="postgresql://postgres:password@localhost:5432/ohliro"

# ===========================================
# AUTHENTICATION
# ===========================================
# NextAuth.js secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-secret-here"

# NextAuth URL (your deployed domain or localhost for dev)
NEXTAUTH_URL="http://localhost:3000"

# ===========================================
# AI / OPENAI
# ===========================================
# OpenAI API key for AI responses
OPENAI_API_KEY="sk-..."

# Optional: Custom embedding model
# OPENAI_EMBEDDING_MODEL="text-embedding-3-small"

# ===========================================
# REDIS / JOB QUEUE
# ===========================================
# Redis URL for BullMQ job queue
# For local: redis://localhost:6379
# For Upstash: rediss://default:xxx@xxx.upstash.io:6379
REDIS_URL="redis://localhost:6379"

# ===========================================
# EMAIL (RESEND)
# ===========================================
# Resend API key for sending emails
RESEND_API_KEY="re_..."

# Webhook signing secret (from Resend dashboard)
RESEND_WEBHOOK_SECRET=""

# Email sending configuration
EMAIL_INBOUND_DOMAIN="mail.oh-liro.com"
EMAIL_FROM_ADDRESS="support@oh-liro.com"
EMAIL_FROM_NAME="Oh-liro Support"

# ===========================================
# WHATSAPP (TWILIO)
# ===========================================
# Twilio credentials
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN=""
TWILIO_WHATSAPP_NUMBER="+1234567890"

# ===========================================
# SOCKET.IO
# ===========================================
# Port for Socket.io server (if running separately)
SOCKET_PORT="3001"

# Allowed origins for CORS
ALLOWED_ORIGINS="http://localhost:3000,https://oh-liro.com"

# ===========================================
# VERCEL DEPLOYMENT (set in Vercel dashboard)
# ===========================================
# These are typically set via Vercel's environment variables UI
# VERCEL_URL - Automatically set by Vercel

# ===========================================
# OPTIONAL: ANALYTICS
# ===========================================
# PostHog (or similar)
# NEXT_PUBLIC_POSTHOG_KEY=""
# NEXT_PUBLIC_POSTHOG_HOST=""

# ===========================================
# OPTIONAL: ERROR TRACKING
# ===========================================
# Sentry
# SENTRY_DSN=""
# SENTRY_AUTH_TOKEN=""
